#ifndef __DEBUG__
#define __DEBUG__

#include <stdint.h>
#include <stdbool.h>

#define GPIO_DIR_INPUT (0x00)
#define GPIO_DIR_OUTPUT (0x01)
#define GPIO_OUTPUT_EN (0x01)

#define FPGA_DEBUG_RXF (0x0001)
#define FPGA_DEBUG_RDN (0x0002)
#define FPGA_DEBUG_TXE (0x0004)
#define FPGA_DEBUG_WRN (0x0008)
#define FPGA_DEBUG_OEN (0x0010)
#define FPGA_DEBUG_RXV (0x0020)

void debug_init();
uint32_t debug_pl_get();
void debug_task(void *params);

#endif
